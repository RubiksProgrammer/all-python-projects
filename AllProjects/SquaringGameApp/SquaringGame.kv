#:kivy 1.0.9
<TheGame>:
	orientation: 'vertical'
	BoxLayout:
		orientation: 'horizontal'
		Label:
			id: numlabel
			font_size: 20
		Label:
			id: timelabel
			font_size: 20
			size_hint_x: None
			width: root.width/4
			text: 'Time'
	Label:
		id: directions
		size_hint_y: None
		height: 30
		text: 'Enter your answer below.'
		font_size: 20
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: None
		height: 30
		TextInput:
			id: my_input
			font_size: 20
			text: ""
		Button:
			id: mybutton
			size_hint_x: None
			width: root.width/4
			font_size: 20
			text: "Click to play again."
			on_press: root.replay()

